<?page title="Seguridad y Servicio al Client" contentType="text/html;charset=UTF-8"?>
<zk xmlns:html="http://www.w3.org/1999/xhtml">
<window id="wEAARE" apply="pe.com.jx_market.controller.PO_EAAdministrateRoleEdit" sizable="true"
        width="500px" height="540px" position="center,center" closable="true"
        action="show: slideDown;hide: slideUp" sclass="s-window-content-popup">
    <style src="s-style.css"/>
    <vbox height="100%" width="100%" sclass="s-vbox-popup">
        <div align="center" height="10%">
            <label zclass="z-south-header" sclass="s-header">
                ${labels.pe.com.jx_market.eAAdministrateRoleEdit.Title}
            </label>
        </div>
        <grid width="100%" fixedLayout="true" sclass="s-grid-popup">
            <auxhead>
                <auxheader label="${labels.pe.com.jx_market.eAAdministrateRoleEdit.SubTitle}" colspan="2" />
            </auxhead>
            <columns>
                <column hflex="1" />
                <column hflex="2" />
            </columns>
            <rows>
                <row>
                    <label value="${labels.pe.com.jx_market.eAAdministrateRoleEdit.cmbArea.Label}" />
                    <combobox id="cmbArea" width="50%"/>
                </row>
                <row>
                    <label value="${labels.pe.com.jx_market.eAAdministrateRoleEdit.txtName.Label}" />
                    <textbox id="txtName" width="60%"/>
                </row>
                <row>
                    <label value="${labels.pe.com.jx_market.eAAdministrateRoleEdit.txtDescription.Label}" />
                    <textbox id="txtDescription" maxlength="255" rows="5" width="100%" />
                </row>
            </rows>
        </grid>
        <hbox align="end" pack="end" hflex="1" vflex="1" sclass="s-hbox-popup">
            <button id="btnSave" label="${labels.pe.com.jx_market.eAAdministrateRoleEdit.btnSave.Label }"
                image="/media/filesave.png" />
            <button id="btnClose" label="${labels.pe.com.jx_market.eAAdministrateRoleEdit.btnClose.Label }"
                image="/media/cancel.png" />
        </hbox>
    </vbox>
</window>
</zk>
