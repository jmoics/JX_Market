<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<zk xmlns:html="http://www.w3.org/1999/xhtml">
<window id="wEACP" hflex="1" vflex="1" apply="pe.com.jx_market.controller.PO_EAProducts" >
    <style>
        .z-grid {
            border-left-width: 0px;
            border-right-width: 0px;
        }
        .z-window-content {
            padding: 1px;
        }
    </style>
    <borderlayout id="bl" hflex="1" vflex="1">
        <north size="26%" collapsible="false">
            <vbox hflex="1" vflex="1" align="center">
                <label zclass="z-south-header"
                    style=" background:transparent;font-family: sans-serif; border-bottom:0; font-size:large; font-weight:bold">
                    Consulta de Productos
                </label>
                <html:p />
                <grid fixedLayout="true" width="100%" visible="true" hflex="1">
                    <auxhead>
                        <auxheader label="Búsqueda de Productos" colspan="4" />
                    </auxhead>
                    <columns>
                        <column hflex="1" />
                        <column hflex="2" />
                        <column hflex="1" />
                        <column hflex="2" />
                    </columns>
                    <rows>
                        <row spans="1,3">
                            <label value="Categoria" />
                            <chosenbox id="chbCat" hflex="1" />
                        </row>
                        <row>
                            <label value="Nombre Producto" />
                            <textbox id="txtProdName" hflex="1" />
                            <label value="Estado" />
                            <combobox id="cmbEstad" hflex="1" />
                            <!-- <label value="Marca"/>
                                <textbox id="txtMarc" width="150px"/> -->
                        </row>
                    </rows>
                </grid>
                <hbox align="center" pack="end" hflex="1" vflex="1">
                    <button id="btnSearch" label="Buscar" image="/media/search4.png" />
                    <button id="btnClean" label="Limpiar" image="/media/filenew.png" />
                </hbox>
            </vbox>
        </north>
        <center autoscroll="true" border="none">
            <listbox id="lstProd" pagingPosition="bottom" mold="paging" autopaging="true" hflex="1" vflex="1">
                <listhead>
                    <listheader label="Categoria" hflex="2"/>
                    <listheader label="Nombre" sort="auto" hflex="2"/>
                    <listheader label="Descripción" sort="auto" hflex="4"/>
                    <!-- <listheader label="Marca" sort="auto"/> -->
                    <!-- <listheader label="Precio" sort="auto"/> -->
                    <listheader label="Estado" sort="auto" hflex="1"/>
                </listhead>
            </listbox>
        </center>
        <south size="5%" style="visibility:visible;">
            <hbox align="center" pack="end" hflex="1" vflex="1">
                <button id="btnCreate" label="Nuevo"
                    image="/media/filenew.png" />
                <button id="btnEdit" label="Editar"
                    image="/media/edit.png" />
            </hbox>
        </south>
    </borderlayout>
</window>
</zk>